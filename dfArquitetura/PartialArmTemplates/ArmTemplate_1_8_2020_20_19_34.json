			"properties": {
				"annotations": [],
				"type": "HDInsight",
				"typeProperties": {
					"clusterUri": "https://hdi-arq-cluster.azurehdinsight.net",
					"userName": "ruan",
					"password": {
						"type": "SecureString",
						"value": "**********"
					},
					"isEspEnabled": false,
					"linkedServiceName": {
						"referenceName": "Conn_BlobA",
						"type": "LinkedServiceReference"
					}
				}
			},
			"dependsOn": []
		}
	]
}